<launch>

  <!-- left USB #1 -->
  <include file="$(find openni2_launch)/launch/openni2.launch">
    <arg name="camera" value="left_hand_camera" />
    <arg name="rgb_frame_id" value="left_hand_camera_rgb_optical_frame" />
    <arg name="depth_frame_id" default="left_hand_camera_depth_optical_frame" />
    <arg name="device_id" value="#1" />
    <arg name="publish_tf" value="false" />
  </include>
  <node name="left_hand_camera_rgb_static_tf_publisher"
        pkg="tf" type="static_transform_publisher"
        args="0.02 0.040 0 0.01 0 0 left_hand_camera_depth_optical_frame left_hand_camera_rgb_optical_frame 100" />
  <node name="left_hand_camera_depth_static_tf_publisher"
        pkg="tf" type="static_transform_publisher"
        args="-0.05 0.03 -0.0 -1.6 -0.05 -0.0 left_hand left_hand_camera_depth_optical_frame 100" />


  <!-- right USB #1 -->
  <include file="$(find openni2_launch)/launch/openni2.launch">
    <arg name="camera" value="right_hand_camera" />
    <arg name="rgb_frame_id" value="right_hand_camera_rgb_optical_frame" />
    <arg name="depth_frame_id" default="right_hand_camera_depth_optical_frame" />
    <arg name="device_id" value="#2" />
    <arg name="publish_tf" value="false" />
  </include>
  <node name="right_hand_camera_rgb_static_tf_publisher"
        pkg="tf" type="static_transform_publisher"
        args="0.05 0.013 0 0.01 0 0 right_hand_camera_depth_optical_frame right_hand_camera_rgb_optical_frame 100" />
  <node name="right_hand_camera_depth_static_tf_publisher"
        pkg="tf" type="static_transform_publisher"
        args="-0.03 -0.01 0.01 -1.57 -0.02 0.0 right_hand right_hand_camera_depth_optical_frame 100" />


</launch>

